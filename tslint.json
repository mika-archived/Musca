{
  "extends": "tslint:latest",
  "rules": {
    "adjacent-overload-signatures": true,
    "member-access": [
      true,
      "check-accessor",
      "check-constructor"
    ],
    "member-ordering": [
      true,
      {
        "order": "fields-first"
      }
    ],
    "no-any": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-internal-module": true,
    "no-namespace": false,
    "no-reference": false,
    "no-var-requires": true,
    "only-arrow-functions": [
      true,
      "allow-declarations"
    ],
    "curly": true,
    "forin": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": [
      true,
      "error"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-null-keyword": false,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-unused-new": true,
    "no-unused-variable": [
      true,
      "check-parameters",
      "react",
      {
        "ignore-pattern": "^_"
      }
    ],
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "radix": true,
    "triple-equals": [
      true,
      "allow-null-check",
      "allow-undefined-check"
    ],
    "use-isnan": true,
    "eofline": true,
    "indent": [
      true,
      "spaces"
    ],
    "linebreak-style": [
      false
    ],
    "max-classes-per-file": [
      true,
      1
    ],
    "max-file-line-count": [
      true,
      300
    ],
    "max-line-length": [
      true,
      120
    ],
    "no-default-export": true,
    "no-mergeable-namespace": true,
    "no-require-imports": true,
    "no-trailing-whitespace": true,
    "object-literal-sort-keys": true,
    "trailing-comma": [
      false
    ],
    "align": [
      false
    ],
    "array-type": [
      true,
      "array-simple"
    ],
    "arrow-parens": true,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "interface-name": [
      true,
      "always-prefix"
    ],
    "new-parens": true,
    "variable-name": [
      "check-format",
      "allow-leading-underscore"
    ]
  }
}